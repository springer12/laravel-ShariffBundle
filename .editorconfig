root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml,twig,php}]
indent_size = 4

[*.{js,scss,css}]
indent_size = 2

[.travis.yml,Jenkinsfile]
indent_size = 2

[*.{json}]
indent_size = 4

[Makefile]
indent_style = tab
