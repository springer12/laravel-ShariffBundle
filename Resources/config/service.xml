<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="core23.shariff.cache.class">Core23\ShariffBundle\Cache\DoctrineCache</parameter>
        <parameter key="core23.shariff.backend.manager.class">Core23\ShariffBundle\Backend\BackendManager</parameter>
    </parameters>

    <services>
        <service id="core23.shariff.backend.manager" class="%core23.shariff.backend.manager.class%">
            <argument type="service" id="core23.shariff.cache" />
            <argument>%core23_shariff.options%</argument>
        </service>

        <service id="core23.shariff.cache" class="%core23.shariff.cache.class%">
            <argument type="service" id="doctrine_cache.providers.core23_shariff" on-invalid="ignore" />
        </service>
    </services>

</container>
