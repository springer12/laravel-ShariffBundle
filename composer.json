{
  "name": "core23/shariff-bundle",
  "type": "symfony-bundle",
  "description": "This bundle provides a wrapper for using shariff inside the sonata-project.",
  "keywords": [
    "symfony",
    "shariff",
    "heise",
    "facebook",
    "twitter",
    "google",
    "sonata",
    "block",
    "widget",
    "bundle"
  ],
  "homepage": "https://core23.de",
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Gripp",
      "email": "mail@core23.de"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "doctrine/doctrine-cache-bundle": "^1.0",
    "guzzlehttp/guzzle": "^5.0 || ^6.0",
    "heise/shariff": ">=5.1",
    "sonata-project/block-bundle": "^3.1.1",
    "symfony/symfony": "^2.3 || ^3.0"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^2.7 || ^3.0",
    "sllh/php-cs-fixer-styleci-bridge": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Core23\\ShariffBundle\\": ""
    },
    "exclude-from-classmap": [
        "/Tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": { "Core23\\ShariffBundle\\Tests\\": "Tests/" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.1.x-dev"
    }
  }
}
